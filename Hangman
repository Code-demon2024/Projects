import random
from list_of_words import word_list 
print( ''' 
 _                                             
| |                                            
| |__   __ _ _ __   __ _ _ __ ___   __ _ _ __  
| '_ \ / _` | '_ \ / _` | '_ ` _ \ / _` | '_ \ 
| | | | (_| | | | | (_| | | | | | | (_| | | | |
|_| |_|\__,_|_| |_|\__, |_| |_| |_|\__,_|_| |_|
                    __/ |                      
                   |___/    ''')
stages = ['''
  +---+
  |   |
  O   |
 /|\  |
 / \  |
      |
=========
''', '''
  +---+
  |   |
  O   |
 /|\  |
 /    |
      |
=========
''', '''
  +---+
  |   |
  O   |
 /|\  |
      |
      |
=========
''', '''
  +---+
  |   |
  O   |
 /|   |
      |
      |
=========''', '''
  +---+
  |   |
  O   |
  |   |
      |
      |
=========
''', '''
  +---+
  |   |
  O   |
      |
      |
      |
=========
''', '''
  +---+
  |   |
      |
      |
      |
      |
=========
''']

chosen_word= random.choice(word_list)

lives = 7 

display = []
for letter in chosen_word:
  display += "_"


end_of_game = False

while end_of_game is False:
  
      guess = input("Guess a letter: ").lower()
      letter_guessed= False
  
      for position in range(len(chosen_word)): 
        letter = chosen_word[position] 
        if letter == guess: 
          display[position] = letter
          letter_guessed = True
          print(f"{' '.join(display)}")

      if letter_guessed is False: 
        lives = lives - 1
        if lives < 7: 
              print(stages[lives])     
      if lives == 0:
        end_of_game = True
        print("You lost!")
        print("The chosen word was: " + chosen_word)


      if "_" not in display:
       end_of_game = True
       print("You Won!")


